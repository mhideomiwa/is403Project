    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <link href="css/about.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Lato', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .navbar {
            background-color: #2C3E50;
        }

        .navbar-brand {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            font-weight: bold;
            color: #fff;
        }

        .navbar-toggler {
            background-color: #F39C12;
        }

        .navbar-nav a {
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

        .navbar-nav a:hover {
            color: #F39C12;
        }

        #about {
            padding-top: 80px;
            padding-bottom: 80px;
        }

        .page-section-heading {
            font-size: 36px;
            margin-bottom: 30px;
            color: #ffffff;
        }

        .divider-custom {
            margin-bottom: 40px;
        }

       

        .lead {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .masthead {
            background-color: #2C3E50;
            padding: 80px 0;
        }

        .masthead-subheading {
            font-size: 24px;
            font-weight: light;
            margin-bottom: 20px;
            color: #F39C12;
        }

        .listen-section {
            background-color: #F39C12;
            padding: 80px 0;
            color: #2C3E50;
        }

        .listen-section-heading {
            font-size: 36px;
            margin-bottom: 30px;
        }

        .explore-section {
            background-color: #F39C12;
            padding: 80px 0;
            color: #2C3E50;
        }

        .explore-section-heading {
            font-size: 36px;
            margin-bottom: 30px;
        }

        .share-section {
            background-color: #2C3E50;
            padding: 80px 0;
            color: #ffffff;
        }

        .share-section-heading {
            font-size: 36px;
            margin-bottom: 30px;
        }
    </style>
